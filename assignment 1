#include <stdio.h>
int main()
{
    int arr[20],i,n;
    printf("Enter size of the array\n");
    scanf("%d",&n);
    printf("Enter the elements of the array\n");
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    printf("\nEven numbers are\n");
     for(i=0;i<n;i++){
        if(arr[i]%2==0){
            printf("%d",arr[i]);
        }
    }
    printf("\nOdd numbers are \n");
     for(i=0;i<=n;i++){
        if(arr[i]%2==1){
            printf("%d",arr[i]);
        }
    }
    return 0;
}
